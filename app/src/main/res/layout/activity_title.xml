<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="6dp">
    
    <ImageView
        android:id="@+id/imageview_title_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/_infoback"/>
    <TextView
        android:id="@+id/textview_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/imageview_title_back"
        android:textSize="20sp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/textview_title_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="@string/temppassword_text_gettemp"/>
    <TextView
        android:id="@+id/textview_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#0055ff"
        />
</RelativeLayout>
