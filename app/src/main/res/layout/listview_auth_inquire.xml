<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/authorization_text_inquire_date"
            android:padding="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text_auth_inquire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2015年10月15日"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/mine_press"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <View style="@style/line_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="@string/authorization_text_equipment"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_auth_inquire_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/title_back"/>
            </RelativeLayout>
        </LinearLayout>
        <View style="@style/line_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                style="@style/authorization_text_left"
                android:text="@string/authorization_text_phone"/>
            <TextView
                android:id="@+id/text_auth_inquire_phonenum"
                style="@style/authorization_text_inquire_right"
                android:text="2015年3月15日"/>
        </LinearLayout>
        <View style="@style/line_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                style="@style/authorization_text_left"
                android:text="@string/authorization_text_username"/>
            <TextView
                android:id="@+id/text_auth_inquire_username"
                style="@style/authorization_text_inquire_right"
                android:text="2015年3月15日"/>
        </LinearLayout>
        <View style="@style/line_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                style="@style/authorization_text_left"
                android:text="@string/authorization_text_lastdate"/>
            <TextView
                android:id="@+id/text_auth_inquire_lastdate"
                style="@style/authorization_text_inquire_right"
                android:text="2015年3月15日"/>
        </LinearLayout>
        <View style="@style/line_horizontal"/>
    </LinearLayout>
</LinearLayout>