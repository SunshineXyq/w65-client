<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bluedatax.w65.chart.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.bluedatax.w65.chart.TitleLayout>
    <View style="@style/line_horizontal"/>
   <RelativeLayout
       android:id="@+id/layout_seticon"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="12dp"
       android:background="#ffffff"
       android:padding="5dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/setting_text_icon"
           android:layout_centerVertical="true"
           android:textSize="25dp"/>
       <ImageView
           android:id="@+id/imageview_setting_icon_more"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/_jiantou"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"/>
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/circleimage_icon"
           android:layout_width="96dp"
           android:layout_height="96dp"
           android:src="@mipmap/ic_launcher"
           app:civ_border_width="2dp"
           app:civ_border_color="#55ffff"
           android:layout_toLeftOf="@+id/imageview_setting_icon_more"/>
       </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_text_passwordmanager"
        android:padding="20dp"

        android:textSize="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_findpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_text_findloginpass"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/heart_gift_remind"
                style="@style/heart_more"
                />
            </RelativeLayout>
        <View style="@style/line_horizontal"/>
        <RelativeLayout
            android:id="@+id/layout_fixpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_text_fixloginpass"
                android:textSize="18dp"/>
            <ImageView
                style="@style/heart_more"
                />
        </RelativeLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_text_grade"
                android:textSize="18dp"/>
            <ImageView

                style="@style/heart_more"
                />
        </RelativeLayout>
        <View style="@style/line_horizontal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_text_about"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/imageview_setting_about_more"
                style="@style/heart_more"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:layout_toLeftOf="@+id/imageview_setting_about_more"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/button_securityquit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_text_quit"
        android:background="@drawable/button_commit"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginTop="70dp"
        android:padding="10dp"
        android:textColor="#ff0000"/>
</LinearLayout>