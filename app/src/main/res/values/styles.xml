<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!--主界面下的四个按钮-->
    <style name="radiobutton_main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <!--横直线-->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c0c0c0</item>
    </style>

    <!--爱心定制中的开关按钮-->
    <style name="heart_switchbutton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@mipmap/title_back</item>
    </style>

    <!--爱心定制中的文本-->
    <style name="heart_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="white_arrow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawableRight">@mipmap/_jiantou</item>
    </style>

    <!--爱心定制中的更多尖括号-->
    <style name="heart_more">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@mipmap/_jiantou</item>
    </style>

    <style name="heart_switch">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:src">@mipmap/heart_switch_close</item>
    </style>


    <!--列表后边带数字的尖括号-->
    <style name="number_bracket">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@mipmap/_jiantou</item>
    </style>

    <!--登录界面无法登陆时的几个选项-->
    <style name="login_trouble">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#0000ff</item>
    </style>

    <!--登录界面登录信息-->
    <style name="login_info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="callserviceDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowBackground">@android:color/transparent</item><!--除去背景色-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--用户授权界面 输入信息左边-->
    <style name="authorization_text_left">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--用户授权界面 输入信息右边-->
    <style name="authorization_text_right">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--用户授权界面 输入信息右边-->
    <style name="authorization_text_inquire_right">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#c0c0c0</item>
    </style>
    <!--圆形布局-->
    <style name="familay_ircle">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>
    <style name="loadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Transparent">

        <item name="android:windowBackground">@color/transparent</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>

    </style>
</resources>
